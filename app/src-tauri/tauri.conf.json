{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Solaris",
  "version": "0.2.0",
  "identifier": "com.solaris.app",
  "build": {
    "beforeBuildCommand": "./scripts/build.sh && bun run build",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "./scripts/build.sh && bun run dev",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Solaris",
        "width": 1200,
        "height": 800
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": ["solaris_core"]
  }
}
